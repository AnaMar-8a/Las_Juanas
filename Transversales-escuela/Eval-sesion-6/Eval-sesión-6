    <!-- =================================================================== -->
    <!-- ======================== SCRIPT JAVASCRIPT ======================== -->
    <!-- =================================================================== -->
    <script>
        /**
         * @file Manages the interactive presentation functionality.
         * @description This script controls slide navigation, active states, and keyboard controls.
         * It is encapsulated in an object for better organization and to avoid polluting the global scope.
         */
        document.addEventListener('DOMContentLoaded', () => {

            const PresentationController = {
                // --- DOM Elements ---
                slides: null,
                navLinks: null,
                navContainer: null,
                currentSlideIndex: 0,

                /**
                 * Initializes the presentation by querying DOM elements and setting up event listeners.
                 */
                init() {
                    this.navContainer = document.querySelector('nav');
                    this.slides = document.querySelectorAll('.content-slide');
                    this.navLinks = document.querySelectorAll('.nav-link');

                    // Add event listeners
                    this.navContainer.addEventListener('click', this.handleNavClick.bind(this));
                    document.addEventListener('keydown', this.handleKeyDown.bind(this));

                    // Initial setup
                    this.showSlide(0); // Show the first slide on load
                    this.randomizeWords(); // Apply random rotation if word cloud exists
                },

                /**
                 * Displays a specific slide and updates navigation UI.
                 * @param {number} index - The index of the slide to show.
                 */
                showSlide(index) {
                    // Validate index bounds safely
                    const validIndex = Math.max(0, Math.min(index, this.slides.length - 1));

                    // Update slide visibility and ARIA attributes
                    this.slides.forEach((slide, i) => {
                        const isActive = (i === validIndex);
                        slide.classList.toggle('active', isActive);
                        slide.hidden = !isActive; // Manage hidden attribute for accessibility
                    });

                    // Update navigation links' active state and ARIA attributes
                    this.navLinks.forEach(link => {
                        const href = link.getAttribute('href');
                        // Check if href exists and follows the pattern #slide-NUMBER
                        if (href && href.startsWith('#slide-')) {
                             try {
                                const linkIndex = parseInt(href.substring(7));
                                const isActive = (linkIndex === validIndex);
                                link.classList.toggle('active', isActive);
                                link.setAttribute('aria-selected', isActive ? 'true' : 'false');
                             } catch (e) {
                                 // Log error if href parsing fails, but don't break execution
                                 console.error("Error parsing slide index from href:", href, e);
                             }
                        }
                    });
                    
                    this.currentSlideIndex = validIndex;
                },
                
                /**
                 * Handles click events on the navigation menu using event delegation.
                 * @param {Event} e - The click event object.
                 */
                handleNavClick(e) {
                    // Find the closest ancestor which is a nav-link
                    const navLink = e.target.closest('.nav-link');
                    if (navLink) {
                        e.preventDefault(); // Prevent default anchor behavior
                         const href = navLink.getAttribute('href');
                         // Ensure href exists and follows the pattern #slide-NUMBER
                         if (href && href.startsWith('#slide-')) {
                            try {
                                const targetIndex = parseInt(href.substring(7));
                                this.showSlide(targetIndex);
                            } catch (e) {
                                // Log error if href parsing fails
                                console.error("Error parsing slide index from clicked href:", href, e);
                            }
                         }
                    }
                },

                /**
                 * Handles keyboard navigation with ArrowRight and ArrowLeft keys.
                 * @param {Event} e - The keydown event object.
                 */
                handleKeyDown(e) {
                    if (e.key === 'ArrowRight') {
                        const nextIndex = this.currentSlideIndex + 1;
                        this.showSlide(nextIndex); // showSlide handles bounds checking
                    } else if (e.key === 'ArrowLeft') {
                        const prevIndex = this.currentSlideIndex - 1;
                        this.showSlide(prevIndex); // showSlide handles bounds checking
                    }
                },

                 /**
                 * Applies a slight random rotation to words in elements with the class 'word'
                 * found within containers having the ID 'word-cloud-container' or similar.
                 * This adds a dynamic visual effect. Checks if the word cloud container exists.
                 */
                randomizeWords() {
                    const wordCloudContainers = document.querySelectorAll('.word-cloud-container');
                    if (wordCloudContainers.length === 0) return; // Exit if no word clouds

                    wordCloudContainers.forEach(container => {
                        const words = container.querySelectorAll('.word');
                        words.forEach(word => {
                            // Generate a random rotation between -5 and 5 degrees for a subtle effect
                            const rotation = Math.floor(Math.random() * 11) - 5;
                            word.style.transform = `rotate(${rotation}deg)`;
                        });
                    });
                },
            };

            // Initialize the controller once the DOM is fully loaded.
            PresentationController.init();
        });
    </script>
</body>
</html>

